# ValhallaBot2 Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# DISCORD CONFIGURATION
# ================================
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# ================================
# TWITCH CONFIGURATION  
# ================================
# Get from: https://dev.twitch.tv/console
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_BOT_TOKEN=your_twitch_bot_oauth_token

# ================================
# DATABASE CONFIGURATION
# ================================
# PostgreSQL connection string
# Local: postgresql://username:password@localhost:5432/valhallabot
# Heroku: postgres://... (automatically provided)
DATABASE_URL=postgresql://username:password@host:port/database

# ================================
# WEBHOOK CONFIGURATION
# ================================
# Your public webhook URL for Twitch EventSub
WEBHOOK_URL=https://your-domain.com/eventsub
# Secret for webhook verification (choose a secure random string)
EVENTSUB_SECRET=your_secure_webhook_secret_here

# ================================
# SECURITY CONFIGURATION (Optional)
# ================================
# Rate limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# IP whitelisting (optional)
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=

# Webhook secret (alternative name)
WEBHOOK_SECRET=your_secure_webhook_secret_here
MAX_REQUESTS_PER_MINUTE=60
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true

# Development/Testing
DEV_MODE=false
TEST_GUILD_ID=
